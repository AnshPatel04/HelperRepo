static Future<bool> deleteCreations({required String image}) async {
  SharedPreferences prefs = await SharedPreferences.getInstance();
  String? creations = prefs.getString('creations');

  // If creations is null, return false because thereâ€™s nothing to delete
  if (creations == null || creations.isEmpty) {
    return false;
  }

  // Print initial state for debugging
  print(':::: Deleting image: $image ::::');
  print(':::: Current creations: $creations ::::');

  // Find the index of the image to remove
  int ix = creations.indexOf(image);
  if (ix == -1) {
    // Image not found, nothing to delete
    return false;
  }

  int lIx = ix + image.length;

  // Handle the case where the image is at the start of the string
  if (ix == 0) {
    if (lIx == creations.length) {
      // If it's the only item, clear the entire string
      creations = '';
    } else {
      // If there's more content after the image, remove it and shift the string
      creations = creations.substring(lIx + 1);
    }
  } 
  // Handle the case where the image is in the middle or end of the string
  else if (lIx == creations.length) {
    creations = creations.substring(0, ix - 1); // Remove image from the end
  } else {
    // Image is somewhere in the middle, so we need to remove it from both sides
    creations = creations.substring(0, ix) + creations.substring(lIx + 2);
  }

  // Print the updated creations for debugging
  print(':::: Updated creations: $creations ::::');

  // Save the updated creations string back to SharedPreferences
  prefs.setString('creations', creations);

  return true;
}
